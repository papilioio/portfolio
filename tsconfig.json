{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "es2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": ".",
        // "paths": {
        //     "@react-pdf-viewer/*": ["node_modules/@react-pdf-viewer/core"],
        //     "*": ["node_modules", "packages"]
        // }
    }  
}